<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BluetoothActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN"
        android:id="@+id/btn_scan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:width="300dp"
        android:height="50dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="3"
        android:isIndicator="true"
        android:rating="1"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/ratingBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FInd 3 Acacia Tree"
        android:id="@+id/textView5"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find 2 Music Bush"
        android:id="@+id/textView6"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ratingBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:numStars="3"
        android:rating="2"
        android:isIndicator="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:numStars="3"
        android:rating="3"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignStart="@+id/ratingBar2" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar4"
        android:numStars="3"
        android:rating="2"
        android:layout_below="@+id/ratingBar3"
        android:layout_alignParentEnd="true"
        android:isIndicator="true"/>

    <RatingBar
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar5"
        android:numStars="3"
        android:rating="3"
        android:layout_below="@+id/ratingBar4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find 1 Candle Tree"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/ratingBar3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar2"
        android:layout_toStartOf="@+id/ratingBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find 1 Mahogany"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/ratingBar4"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ratingBar5"
        android:layout_toStartOf="@+id/ratingBar4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find the waterfall"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ratingBar4"
        android:layout_alignBottom="@+id/ratingBar5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OBJECTIVES"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RATING"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />


</RelativeLayout>
