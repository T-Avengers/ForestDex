<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chester.foresthackapp.Rewards">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REWARDS"
        android:id="@+id/tv_rewardsText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You currently have 0 point(s)"
        android:id="@+id/tv_curPoints"
        android:layout_below="@+id/tv_rewardsText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:id="@+id/btn_loadRedeem"
        android:layout_marginTop="51dp"
        android:width="120dp"
        android:layout_below="@+id/tv_curPoints"
        android:layout_toStartOf="@+id/tv_rewardsText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD"
        android:id="@+id/tv_load"
        android:width="120dp"
        android:layout_below="@+id/btn_loadRedeem"
        android:layout_alignStart="@+id/btn_loadRedeem"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REDEEM"
        android:id="@+id/btn_moveRedeem"
        android:width="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:id="@+id/tv_food"
        android:textAlignment="center"
        android:width="120dp"
        android:layout_below="@+id/btn_foodRedeem"
        android:layout_alignEnd="@+id/btn_foodRedeem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:id="@+id/btn_foodRedeem"
        android:width="120dp"
        android:layout_alignTop="@+id/btn_loadRedeem"
        android:layout_toEndOf="@+id/tv_rewardsText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVIES"
        android:id="@+id/tv_movies"
        android:layout_below="@+id/btn_moveRedeem"
        android:layout_centerHorizontal="true"
        android:width="120dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btn_back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:width="150dp" />
</RelativeLayout>
